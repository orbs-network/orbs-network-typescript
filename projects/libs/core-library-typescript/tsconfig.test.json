{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "types": [
      "sinon",
      "chai",
      "mocha",
      "node"
    ],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "outDir": "distTest",
    "baseUrl": ".",
    "paths": {
      "*": [
          "node_modules/*",
          "src/types/*",
          "test/types/*"
      ]
    }
  },
  "include": [
    "test/**/*"
  ]
}

{
  "name": "orbs-virtual-machine-service",
  "version": "0.1.0",
  "description": "orbs-virtual-machine-service",
  "repository": {
    "type": "git",
    "url": "https://github.com/orbs-network/virtual-machine-service-typescript.git"
  },
  "author": "Orbs Team",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "rebuild": "npm run build-ts",
    "serve": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "ts-mocha src/test/**/*.spec.ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "bind-decorator": "^1.0.11",
    "lodash": "^4.17.4",
    "orbs-common-library": "file:../common-library-typescript"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/lodash": "^4.14.99",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.0",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "mocha": "^5.0.0",
    "nodemon": "^1.14.11",
    "ts-mocha": "^1.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  }
}

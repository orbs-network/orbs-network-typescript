{
  "name": "orbs-e2e",
  "version": "0.1.0",
  "description": "Orbs end-to-end tests",
  "author": "Orbs Team",
  "license": "MIT",
  "scripts": {
    "test": "ts-mocha src/*.spec.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "bind-decorator": "^1.0.11",
    "bluebird": "^3.5.1",
    "orbs-common-library": "file:../projects/common-library-typescript",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/chai": "^4.1.2",
    "@types/expect": "^1.20.2",
    "@types/lodash": "^4.14.98",
    "@types/mocha": "^2.2.47",
    "@types/node": "^9.4.0",
    "@types/supertest": "^2.0.4",
    "@types/underscore": "^1.8.7",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "jest": "^22.1.4",
    "mocha": "^5.0.0",
    "nodemon": "^1.14.11",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.2",
    "ts-mocha": "^1.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  }
}
